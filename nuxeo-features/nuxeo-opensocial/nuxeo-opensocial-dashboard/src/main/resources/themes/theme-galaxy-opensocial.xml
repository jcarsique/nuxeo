<?xml version="1.0" encoding="UTF-8"?>
<theme name="galaxy-opensocial" template-engines="jsf-facelets">
  <layout>
    <page name="opensocial_dashboard">
      <!-- Top bar -->
      <section>
        <cell>
          <!-- logo -->
          <fragment type="generic fragment" />
        </cell>
        <cell>
          <!-- user services -->
          <fragment type="generic fragment" />
        </cell>
        <cell>
          <!-- Include -->
          <fragment type="generic fragment" />
        </cell>
      </section>
      <!-- on other pages, this is the navigation and breadcrumb stuff -->
      <section>
        <cell>
          <fragment type="generic fragment" />
        </cell>
      </section>
      <section>
        <!--
        <cell>
          <fragment type="dashboardLayoutManager" />
          <fragment type="dashboardGadgetManager" />
        </cell>
        -->
      </section>
      <section>
        <cell>
          <fragment type="generic fragment" />
        </cell>
      </section>
      <!-- what's this for? -->
      <section>
        <cell />
      </section>
      <section>
        <!-- before this was the nuxeo includes, but that broke the JS world
          <cell>

          <fragment type="generic fragment"/>
          </cell> -->
        <cell />
      </section>
    </page>
  </layout>
