<?xml version="1.0"?>
<fragment>

  <extension target="faces-config#NAVIGATION">
    <navigation-case>
      <from-outcome>view_shibbGroups</from-outcome>
      <to-view-id>/view_shibbGroups.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>view_shibbGroup</from-outcome>
      <to-view-id>/view_shibbGroup.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>edit_shibbGroup</from-outcome>
      <to-view-id>/edit_shibbGroup.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>create_shibbGroup</from-outcome>
      <to-view-id>/create_shibbGroup.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </extension>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>

    <!--  be sure no directory with that name exists -->
    <delete path="${bundle.fileName}.tmp" />
    <!--  create a temporary directory -->
    <mkdir path="${bundle.fileName}.tmp" />
    <unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp" />
    <append from="${bundle.fileName}.tmp/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
    <append from="${bundle.fileName}.tmp/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
    <delete path="${bundle.fileName}.tmp" />
  </install>

</fragment>
