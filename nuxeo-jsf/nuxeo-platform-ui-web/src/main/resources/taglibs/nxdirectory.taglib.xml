<?xml version="1.0" encoding="UTF-8"?>

<facelet-taglib id="nxdir"
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd"
  version="2.2">
  <description>Nuxeo Directory Taglib</description>
  <namespace>http://nuxeo.org/nxdirectory</namespace>
  <function>
    <function-name>directoryEntry</function-name>
    <function-class>
      org.nuxeo.ecm.platform.ui.web.directory.DirectoryFunctions
    </function-class>
    <function-signature>
      DocumentModel getDirectoryEntry(java.lang.String, java.lang.String)
    </function-signature>
  </function>
  <function>
    <function-name>directoryListEntries</function-name>
    <function-class>
      org.nuxeo.ecm.platform.ui.web.directory.DirectoryFunctions
    </function-class>
    <function-signature>
      DocumentModel getDirectoryListEntries(java.lang.String, java.util.Collection)
    </function-signature>
  </function>
  <function>
    <function-name>directoryEntries</function-name>
    <function-class>
      org.nuxeo.ecm.platform.ui.web.directory.DirectoryFunctions
    </function-class>
    <function-signature>
      DocumentModel getDirectoryEntries(java.lang.String, java.lang.String[])
    </function-signature>
  </function>
  <tag>
    <tag-name>selectItems</tag-name>
    <component>
      <component-type>
        org.nuxeo.ecm.platform.ui.web.directory.UIDirectorySelectItems
      </component-type>
    </component>
  </tag>
  <tag>
    <tag-name>selectItem</tag-name>
    <component>
      <component-type>
        org.nuxeo.ecm.platform.ui.web.directory.UIDirectorySelectItem
      </component-type>
    </component>
  </tag>
  <tag>
    <tag-name>selectOneListbox</tag-name>
    <handler-class>
      org.nuxeo.ecm.platform.ui.web.directory.DirectorySelectOneListboxHandler
    </handler-class>
  </tag>
  <tag>
    <tag-name>selectManyListbox</tag-name>
    <handler-class>
      org.nuxeo.ecm.platform.ui.web.directory.DirectorySelectManyListboxHandler
    </handler-class>
  </tag>
  <tag>
    <tag-name>directoryEntryOutput</tag-name>
    <component>
      <component-type>nxdirectory.DirectoryEntryOutput</component-type>
      <renderer-type>nxdirectory.DirectoryEntryOutput</renderer-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>chainSelectOutput</tag-name>
    <component>
      <component-type>nxdirectory.ChainSelectOutput</component-type>
      <renderer-type>nxdirectory.ChainSelectOutput</renderer-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <!-- chain select -->
  <tag>
    <tag-name>chainSelect</tag-name>
    <component>
      <component-type>nxdirectory.chainSelect</component-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>chainSelectOne</tag-name>
    <component>
      <component-type>nxdirectory.ChainSelectOne</component-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>chainSelectMany</tag-name>
    <component>
      <component-type>nxdirectory.ChainSelectMany</component-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>


  <tag>
    <tag-name>chainSelectListbox</tag-name>
    <component>
      <component-type>nxdirectory.chainSelectListbox</component-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>chainSelectMultiListbox</tag-name>
    <component>
      <component-type>nxdirectory.chainSelectMultiListbox</component-type>
      <handler-class>
        org.nuxeo.ecm.platform.ui.web.tag.handler.GenericHtmlComponentHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>chainSelectStatus</tag-name>
    <component>
      <component-type>nxdirectory.chainSelectStatus</component-type>
    </component>
  </tag>

  <!-- Suggest Box -->

  <function>
    <function-name>getLabelFromId</function-name>
    <function-class>
      org.nuxeo.ecm.platform.ui.web.tag.fn.DocumentModelFunctions
    </function-class>
    <function-signature>
      java.lang.String getLabelFromId(java.lang.String, java.lang.String)
    </function-signature>
  </function>

</facelet-taglib>
