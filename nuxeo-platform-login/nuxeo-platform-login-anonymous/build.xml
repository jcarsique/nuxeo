<?xml version="1.0"?>
<project name="com.nuxeo.protys.anonymous.login" default="deploy" basedir=".">

  <!-- From the pom.xml -->
  <property name="name" value="nuxeo-platform-login-anonymous"/>
  <property name="version" value="5.1.3-SNAPSHOT"/>

  <!-- Create a build.properties file from build.properties.sample
       if you wish to override the JBoss paths -->
  <property file="build.properties"/>
  <property name="jboss.home" value="/opt/jboss"/>
  <property name="jboss.config" value="default"/>

  <property name="javac.debug" value="true"/>
  <property name="javac.deprecation" value="false"/>


  <!-- Boilerplate configuration -->
  <property name="build.dir" value="${basedir}/target"/>
  <property name="deploy.dir" value="${jboss.home}/server/${jboss.config}/deploy"/>

  <condition property="osfamily-unix">
    <os family="unix"/>
  </condition>
  <condition property="osfamily-windows">
    <os family="windows"/>
  </condition>

  <target name="deploy" depends="install,copy" description="Build and copy to JBoss"/>

  <target name="install" depends="install-unix,install-windows" description="Build"/>
  <target name="install-unix" if="osfamily-unix">
    <exec executable="mvn" failonerror="true">
      <arg value="install" />
      <arg value="-Dmaven.test.skip=true" />
    </exec>
  </target>
  <target name="install-windows" if="osfamily-windows">
    <exec executable="cmd" failonerror="true">
      <arg value="/c" />
      <arg value="mvn.bat" />
      <arg value="install" />
      <arg value="-Dmaven.test.skip=true" />
    </exec>
  </target>

  <target name="copy" description="Copy files to JBoss">
    <copy todir="${deploy.dir}/${nuxeo.ear}/plugins/"
          file="${build.dir}/${name}-${version}.jar"
          overwrite="true"/>
    <!-- Could copy other files to .../config too -->
  </target>

  <target name="web" description="Copy web files to a live JBoss">
    <copy todir="${deploy.dir}/${nuxeo.ear}/nuxeo.war"
          overwrite="true">
      <fileset dir="${basedir}/src/main/resources/nuxeo.war/"/>
    </copy>
  </target>

</project>
